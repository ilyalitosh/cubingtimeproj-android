<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_message_background_me">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textColorHint="@color/colorTextLabel"
                android:id="@+id/fragment_chat_room_message_item_me_message_text"
                android:textSize="18sp"
                android:hint="1111111111111111111111"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_chat_room_message_item_me_message_date"
                android:layout_below="@id/fragment_chat_room_message_item_me_message_text"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColorHint="@color/colorTextLabel"
                android:layout_margin="10dp"
                android:hint="27 июня 2018 в 23:07" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>